generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  surname   String
  dob       DateTime
  country   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  links     Link[]
}

model Link {
  id            String   @id @default(cuid())
  userId        String
  slug          String   @unique
  longUrl       String
  isActive      Boolean  @default(true)
  expiresAt     DateTime?
  clicksCount   Int      @default(0) // denormalized counter
  lastClickedAt DateTime?
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
  clicks        Click[]

  @@index([userId, createdAt])
}

enum Device {
  DESKTOP
  MOBILE
  TABLET
  BOT
  OTHER
}

model Click {
  id       String   @id @default(cuid())
  linkId   String
  ts       DateTime @default(now())
  ipHash   String
  ua       String
  isBot    Boolean  @default(false)
  referer  String?
  country  String?
  city     String?

  // NEW: parsed fields for device analytics
  device   Device?   // null = unknown; we'll treat as "OTHER" in charts
  browser  String?   // e.g., "Chrome"
  os       String?   // e.g., "Windows"

  link     Link     @relation(fields: [linkId], references: [id])

  @@index([linkId, ts])
  @@index([linkId, device])     // fast device breakdown
  @@index([linkId, country])    // fast country breakdown
  @@index([linkId, isBot, ts])  // exclude bots in time-series efficiently
}
